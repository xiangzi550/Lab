@Resource
private ${table.serviceName} ${table.entityPath}Service;
//*新增或更新
@PostMapping
public boolean save(@RequestBody ${entity} ${table.entityPath}){
        return ${table.entityPath}Service.saveOrUpdate(${table.entityPath});
        }
@DeleteMapping("/{username}")
public Boolean delete(@PathVariable Integer username){
        return ${table.entityPath}Service.removeById(username);
        }
@PostMapping("/del/batch")
public boolean deleteBatch(@RequestBody List<Integer> usernames){
        return ${table.entityPath}Service.removeBatchByIds(usernames);
        }
@GetMapping
public List<${entity}> findAll(){
        return ${table.entityPath}Service.list();
        }
@GetMapping("/{username}")
public ${entity} findOne(@PathVariable Integer username) {
        return ${table.entityPath}Service.getById(username);
        }

@GetMapping("/page")
public Page<${entity}> findPage(@RequestParam Integer pageNum,
                                @RequestParam Integer pageSize) {



        QueryWrapper<User> queryWrapper = new QueryWrapper<>();
        queryWrapper.orderByDesc("create_time");
        return ${table.entityPath}Service.page(new Page<>(pageNum, pageSize),queryWrapper);
        }


        }

